<section class="container">
  <section class="card">
    <header>
      <h3 class="post-title">{{post.title}}</h3>
    </header>
    <div class="card-body">
      <h4>{{post.content}}</h4>
      <h4>Posted by: {{post.user.username}}</h4>
      <h4>Date posted: {{format_time post.date_created}} </h4>
    </div>
  </section>
  <section class="card">
    <header>
      <h3 class="post-title">Add a comment</h3>
    </header>
    <div class="card-body">
      <form class="form comment-form">
        {{#if noComments}}
        <p>Be the first to comment on this post!</p>
        {{else}}
        <p>Add a comment</p>
        {{/if}}
        <div class="form-group">
          <label for="new-comment">Comment:</label>
          <input class="form-input" type="text" id="new-comment" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </section>
  <section class="flex-column justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>

<script src="/js/addcomment.js" id="comment-hb-script" data-user_id={{user_id}} data-post_id={{post_id}}></script>